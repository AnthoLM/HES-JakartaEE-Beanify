  <navigation-case>
   <from-outcome>showArtists</from-outcome>
   <to-view-id>/showArtists.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 
 <navigation-rule>
  <display-name>showArtists.xhtml</display-name>
  <from-view-id>/showArtists.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>showAlbums</from-outcome>
